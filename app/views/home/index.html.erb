<head>
  <title>league Manager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<p id="notice"><%= notice %></p>
    


<div class="container-wide">
<hr>
<div class="jumbotron">
	<h1>Serve it Up!</h1>
	<!-- <p>Volleyball Legues</p> -->
	<p class="lead"><%= "#{@season.name} #{@season.end.strftime('%Y')}" %></p>
	<a class="btn btn-large btn-success" <%= link_to "Create a Season", new_season_url %> </a>
</div>
<hr>
	<div class="row-fluid marketing">
        <div class="span12">
			<table>
			
			<thead>
			  <tr>
			  	<th>League</th>
			    <th>Season</th>
			    <th>Start Date</th>
			    <th>End Date</th>
			    <th>Day of week</th>
			    <th>Number of Courts</th>
			<!--
			    <% if user_signed_in? %>
			    	<th></th>
			    	<th></th>
			    <% end %>
			-->
			
			  </tr>
			</thead>
			
			<tbody>
			<% @seasons.each do |season| %>
			  <tr>
			  	<td><%= link_to season.league_name, season %></td>
			    <td><%= season.name %></td>
			    <td><%= season.start %></td>
			    <td><%= season.end %></td>
			    <td><%= season.frequency %></td>
			    <td><%= season.number_of_courts %></td>
			
			  </tr>
			<% end %>
			</tbody>
			 
			</table>
        </div>
<hr>
</div>

