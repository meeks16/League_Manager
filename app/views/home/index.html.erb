
<div class="container-narrow">
<hr>
<div class="jumbotron">
	<h1>Serve it Up!</h1>
	<!-- <p>Volleyball Legues</p> -->
	<p class="lead"><%= "#{@season.name} #{@season.end.strftime('%Y')}" %></p>
	<a class="btn btn-large btn-success" <%= link_to "Create a Season", new_season_url %> </a>
</div>
<hr>
	<div class="row-fluid marketing">
        <div class="span6">
          <h4>Seasons</h4>
          	<% @seasons.each do |stable| %>
          		<p><%= link_to "#{stable.league_name} #{stable.name}", stable %> </p>
          		<p><%= "#{stable.start} - #{stable.end}"%> </p>
          	<% end %>
        </div>
        
        <div class="span6">
          <h4>Teams</h4>
          	<% @teams.each do |team| %>
          		<p><%= team.name %> </p>
          	<% end %>
        </div>

        <div class="span6">
          <h4>Players</h4>
          	<% @users.each do |user| %>
          		<p><%= user.email %></p>	
          	<% end %>
        </div>
    <div>
<hr>
</div>

