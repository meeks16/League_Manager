<html>

<head>
  <title>league Manager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<h1>Schedule</h1>

<body>

<%= link_to 'View League Standings', teams_url %>

<table border="1" cellpadding="8">
<thead>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Court</th>
    <th>Home</th>
    <th>Away</th>
    <% if user_signed_in? %>
    	<th></th>
    	<th></th>
    	<th></th>
    <% end %>
  </tr>
</thead>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.date %></td>
    <td><%= schedule.timeslot %></td>
    <td><%= schedule.court %></td>
    <td><%= schedule.teamA %></td>
    <td><%= schedule.teamB %></td>
    <% if user_signed_in? %>
    	<td><%= link_to 'Show', schedule %></td>
    	<td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    	<td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
</body>
</html>

