<html>

<head>
  <title>league Manager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<p id="notice"><%= notice %></p>
    
      <div class="masthead">
        <ul class="nav nav-pills pull-left">
        	<li><%= link_to 'Home', season_url %></li>
        	<li><%= link_to 'Standings', standings_url %></li>
        	<li><%= link_to 'Schedule', schedule_url %></li>
        </ul>
      </div>


<div class="container-wide">

	<hr>
	<div class="jumbotron">
		<h1><%= @season.league_name %></h1>

		<p class="lead"><%= "#{@season.name} #{@season.end.strftime('%Y')}" %></p>
	</div>
	<hr>
	<div class="row-fluid marketing">
		<div class="span6">
		
        	<h4><%= link_to "Shedule", schedule_url %></h4>
        	<% @matches.each do |match| %>
        	<p> <%= match.date.strftime("%m/%d/%Y") %> </p>
        	<table border="1" cellpadding="8">
	        	<thead>
		        	<th>Time</th>
		        	<th>Court</th>
		        	<th>Home</th>
		        	<th>Away</th>	
		        </thead>

		        <tr>
			        <td><%= match.timeslot.name%></td>
			        <td><%= match.court%></td>
			        <td><%= match.season_home_team.team.name %></td>
			        <td><%= match.season_away_team.team.name %></td>
			    </tr>
			    <% end %>
			</table>
			
        </div>
        
		<div class="span6">
			<h4><%= link_to "Standings", standings_url %></h4>
			<table>

				<thead>
					<tr>
						<th>Teams</th>
						<th>Sets Won</th>
						<th>Sets loss</th>
						<% if user_signed_in? %>
							<th></th>
							<th></th>
						<% end %>

					</tr>
				</thead>
				
				<tbody>
				<% @seasonteams.each do |seasonteam| %>
					<tr>
          				<td><%= link_to "#{seasonteam.team.name} ", seasonteam %> </td>
          				<td><%= seasonteam.team.wins %></td>
          				<td><%= seasonteam.team.losses %></td>
					</tr>
          		<% end %>
				</tbody>
			</table>	
		</div>

        <div class="span6">
        	<h4>Teams</h4>
          	<% @seasonteams.each do |seasonteam| %>
          		<p><%= link_to "#{seasonteam.team.name} ", seasonteam %> </p>
          			<% seasonteam.users.each do |user| %>
          				<p><%= user.email %> </p>		
          			<% end %>
          	<% end %>
        </div>
	</div>
	<hr>
</div>

</html>