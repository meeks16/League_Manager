<p id="notice"><%= notice %></p>

<div class="container-narrow">
	<hr>
	<div class="jumbotron">
		<h1><%= @season.league_name %></h1>

		<p class="lead"><%= "#{@season.name} #{@season.end.strftime('%Y')}" %></p>
	</div>
	<hr>
	<div class="row-fluid marketing">
		<div class="span6">
			<h4>Seasons</h4>
			<% @seasons.each do |stable| %>
				<p><%= link_to "#{stable.league_name} #{stable.name}", stable %></p>
				<p><%= "#{stable.start} - #{stable.end}" %></p>
			<% end %>
		</div>

        <div class="span6">
        	<h4>Teams</h4>
          	<% @seasonteams.each do |seasonteam| %>
          		<p><%= link_to "#{seasonteam.team.name} ", seasonteam.team %> </p>
          			<% seasonteam.users.each do |user| %>
          				<p><%= user.email %> </p>		
          			<% end %>
          	<% end %>
        </div>


	</div>
	<hr>
</div>